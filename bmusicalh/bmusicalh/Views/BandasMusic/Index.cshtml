@model  IEnumerable<bmusicalh.Models.BandaMusic>

    @{ 
        ViewData["Title"] = "Bandas Musicales";
    }

<H1>Bandas Musicales</H1>
<p>
    <a asp-action="Create" class="btn btn-dark">AGREGAR NUEVA</a>

    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BandaMusicName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BandaMusicName)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BandaMusicId">Editar</a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.BandaMusicId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BandaMusicId">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</p>
