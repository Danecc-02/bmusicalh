@model bmusicalh.Models.BandaMusic

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>
<h3>¿Esta seguro de eliminar este registro?</h3>

<div>
    <h4>Banda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandaMusicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandaMusicName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandaMusicGenero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandaMusicGenero)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandaMusicCountry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandaMusicCountry)
        </dd>
    </dl>
</div>
<br />
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BandaMusicId" />
        <input type="submit" class="btn btn-danger" value="Borrar" />
        <a asp-action="Index" class="btn btn-success">Regresar</a>

    </form>
</div>
